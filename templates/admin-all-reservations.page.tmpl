{{define "page-title"}}
    All Reservations
{{end}}

{{define "content"}}
<div class="col-md-12">
    {{$res := index .Data "reservations"}}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Last Name</th>
                <th>Room</th>
                <th>Arrival</th>
                <th>Departure</th>
            </tr>
        </thead>
        <tbody>
            {{range $res}}
            <tr>
                <td>{{.ID}}</td>
                <td>{{.LastName}}</td>
                <td>{{.Room.RoomName}}</td>
                <td>{{.StartDate}}</td>
                <td>{{.EndDate}}</td>
            </tr>
            {{end}}
        </tbody>
    </table>
</div>
{{end}}


